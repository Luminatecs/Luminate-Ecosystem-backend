# Copy this file to .env and configure your environment variables

# Environment
NODE_ENV=development

# Server
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=luminate_ecosystem

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:3000

# Redis Configuration (optional - app will work without Redis)
# For local development (default if not specified):
REDIS_URL=redis://localhost:6379
# For production with password:
# REDIS_URL=redis://username:password@hostname:6379
# For cloud Redis (e.g., Redis Labs, AWS ElastiCache):
# REDIS_URL=rediss://username:password@hostname:port

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
